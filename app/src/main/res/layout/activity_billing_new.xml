<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="#5D73EF">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:paddingVertical="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_close"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/billing_close"/>

        <ImageView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dots_group"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/billing_title"
        android:layout_below="@id/top_bar"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:fontFamily="@font/gilroy_bold"
        android:gravity="center_horizontal"
        android:textFontWeight="900"
        android:textStyle="bold"
        android:text="Unlock All Features"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/img_billing"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/billing_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/billing_img"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/img_billing"
        android:layout_above="@id/txt_offer">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:fontFamily="@font/gilroy_regular"
                android:text="Unlock all safety features"
                android:textColor="#ffffff"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/billing_icon1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_regular"
                android:paddingVertical="@dimen/_5sdp"
                android:text="Wireless Camera Detector"
                android:textColor="#ffffff"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/billing_icon2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gilroy_regular"
                android:paddingVertical="@dimen/_5sdp"
                android:text="No more disruptive ads"
                android:textColor="#ffffff"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/billing_icon3"/>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_offer"
        android:layout_above="@id/card_offer"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="@dimen/_20sdp"
        android:layout_marginVertical="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gilroy_regular"
        android:textColor="#ffffff"
        android:letterSpacing="-0.02"
        android:text="Unlimited access for just $6.99/week"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_above="@id/btn_continue"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#5265CE"
        app:cardCornerRadius="@dimen/_25sdp">

        <TextView
            android:paddingHorizontal="@dimen/_20sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroy_regular"
            android:textColor="#ffffff"
            android:letterSpacing="-0.02"
            android:text="Not sure yet? Enjoy 3-day Free Trial"/>

        <CheckBox
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/billing_checkbox"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/btn_continue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:background="@drawable/billing_btn_main"
        android:elevation="0dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_bold"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Continue for just $6.99/week"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_regular"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#878787"
            android:text="Auto renewable. Cancel anytime."/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Terms of Use"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="Privacy Policy"/>

    </LinearLayout>

</RelativeLayout>